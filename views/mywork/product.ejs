        popup.classList.toggle("show");
    }
    function prototyping() {
        var popup = document.getElementById("prototyping");
        popup.classList.toggle("show");
    }
    function modeling() {
        var popup = document.getElementById("modeling");
        popup.classList.toggle("show");
    }
    function manufacturing() {
        var popup = document.getElementById("manufacturing");
        popup.classList.toggle("show");
    }
</script>

