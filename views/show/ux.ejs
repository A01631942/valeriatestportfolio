<%- include("../partials/header") %>

<section>
        <div>
            <!-- display the title of the selected item -->
            <h2 class="my-5"><%=ux.title%></h2>
            <div class="row">
                <!-- List of projects -->
                <div class="d-none d-lg-block">
                    <div class="d-flex col-12 justify-content-between mb-3">
                        <%uxui.forEach(function(title){
                            var name=title.show.charAt(0).toUpperCase() + title.show.slice(1)%>
                        <a class="btn" href="/mywork/ux/<%=title.show%>"><%=name%></a>
                        <%})%>
                    </div>
                </div>
                <div class="col-12 mb-4">
                    <img class="show" src="<%=ux.cover%>" alt="">
                </div>
                <div class="col-12">
                    <p><%=ux.description1%></p>
                    <p><%=ux.description2%></p>
                </div>
            </div>
            <div class="row">
                <%ux.imgs.forEach(function(image){%>
                    <div class="col-12 col-lg-4 my-4">
                        <img class="mt-4 show" src="<%=image%>" alt="">
                    </div>    
                    
                <%})%>
            </div>
            <div class="row justify-content-center">
                <!-- Tools -->
                <%if (ux.tools){%>
                    <div class="col-12 col-lg-6 text-center my-3">
                        <h5>Tools & Software</h5>
                        <p>
                            <%ux.tools.forEach(function(tool){%>   
                                <span>|  <%=tool%>  |</span>
                            <%})%>
                        </p>
                    </div>
                <%}%> 
                <!-- Techniques -->
                <%if (ux.techniques){%>
                    <div class="col-12 col-lg-6 text-center my-3">
                        <h5>Techniques</h5>
                        <p>
                            <%ux.techniques.forEach(function(tech){%>   
                                <span>|  <%=tech%>  |</span>
                            <%})%>
                        </p>
                    </div>
                <%}%> 
                <!-- Collaboration -->
                <%if (ux.collab){%>
                    <div class="col-12 text-center my-3">
                        <h5>In collaboration with</h5>
                        <p>
                            <%ux.collab.forEach(function(name){%>   
                                <span>|  <%=name%>  |</span>
                            <%})%>
                        </p>
                    </div>
                <%}%>  
            </div>
        </div>
</section>

<%- include("../partials/footerWork") %>