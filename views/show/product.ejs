<%- include("../partials/header") %>


<section>
        <div>
            <!-- display the title of the selected item -->
            <h2 class="my-5"><%=product.title%></h2>
            <div class="row">
                <!-- List of projects -->
                <div class="d-none d-lg-block">
                    <div class="d-flex col-12 justify-content-between mb-3">
                        <%products.forEach(function(title){
                            var name=title.show.charAt(0).toUpperCase() + title.show.slice(1)%>
                        <a class="btn" href="/mywork/product/<%=title.show%>"><%=name%></a>
                        <%})%>
                    </div>
                </div>
                <div class="col-12 col-lg-6 my-4">
                    <img class="show" src="<%=product.cover%>" alt="">
                </div>
                <div class="col-12 col-lg-6 m-auto">
                    <p><%=product.description1%></p>
                    <p><%=product.description2%></p>
                </div>
            </div>
            <div class="row">
                <%product.imgs.forEach(function(image){%>
                    <div class="col-12 col-lg-4 my-4">
                        <img class="show" src="<%=image%>" alt="">
                    </div>    
                    
                <%})%>
            </div>
            <div class="row justify-content-center">
                <!-- Tools -->
                <div class="col-12 col-lg-4 text-center my-3">
                    <h5 class="black">Tools & Software</h5>
                    <%product.tools.forEach(function(tool){%>
                        <span>|  <%=tool%>  |</span>
                    <%})%>
                </div>
                <!-- Techniques -->
                <div class="col-12 col-lg-4 text-center my-3">
                    <h5 class="black">Techniques</h5>
                    <%product.techniques.forEach(function(tech){%>
                        <span>|  <%=tech%>  |</span>
                    <%})%>
                </div>
                <!-- Material -->
                <div class="col-12 col-lg-4 text-center my-3">
                    <h5 class="black">Materials</h5>
                    <%product.materials.forEach(function(material){%>
                        <span>|  <%=material%>  |</span>
                    <%})%>
                </div>
                <!-- Collaboration -->
                <%if (product.collab){%>
                    <div class="col-12 text-center my-3">
                        <h5>In collaboration with</h5>
                        <p>
                            <%product.collab.forEach(function(name){%>   
                                <span>|  <%=name%>  |</span>
                            <%})%>
                        </p>
                    </div>
                <%}%>  
            </div>
        </div>
</section>
<%- include("../partials/footerWork") %>